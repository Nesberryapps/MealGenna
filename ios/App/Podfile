require_relative '../../node_modules/@capacitor/ios/scripts/pods_helpers'

platform :ios, '14.0'
use_frameworks! :linkage => :static

def capacitor_pods
  pod 'Capacitor', :path => '../../node_modules/@capacitor/ios'
  pod 'CapacitorCordova', :path => '../../node_modules/@capacitor/ios'
  pod 'CapacitorCommunityAdmob', :path => '../../node_modules/@capacitor-community/admob'
  # Other plugins are loaded automatically by the script below, 
  # but these are explicit to ensure order.
end

target 'App' do
  capacitor_pods
  
  # --- PIN GOOGLE ADS (Prevents Breaking Changes) ---
  pod 'GoogleUserMessagingPlatform', '2.4.0'
  pod 'Google-Mobile-Ads-SDK', '11.3.0'
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      # 1. Force every plugin to use iOS 14.0 (Fixes version mismatches)
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      
      # 2. THE MAGIC FIX: Fixes RevenueCat/Swift errors with Static Linking
      config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
    end
  end
end