# Add default JVM options here. You can also use JAVA_OPTS and GRADLE_OPTS to pass JVM options to this script.
DEFAULT_JVM_OPTS=""

APP_NAME="Gradle"
APP_BASE_NAME=`basename "$0"`

# Use the maximum available, or set MAX_FD != -1 to use that value.
MAX_FD="maximum"

# For Darwin, add options to specify how the application appears in the dock
# DOCK_OPTS="-Xdock:name=$APP_NAME -Xdock:icon=$APP_HOME/media/gradle.icns"

# OS specific support (must be 'true' or 'false').
cygwin=false
msys=false
darwin=false
nonstop=false
case "`uname`" in
  CYGWIN* )
    cygwin=true
    ;;
  Darwin* )
    darwin=true
    ;;
  MINGW* )
    msys=true
    ;;
  NONSTOP* )
    nonstop=true
    ;;
esac

# Attempt to set APP_HOME
# Resolve links: $0 may be a link
PRG="$0"
# Need this for relative symlinks.
while [ -h "$PRG" ] ; do
    ls=`ls -ld "$PRG"`
    link=`expr "$ls" : '.*-> \(.*\)$'`
    if expr "$link" : '/.*' > /dev/null; then
        PRG="$link"
    else
        PRG=`dirname "$PRG"`"/$link"
    fi
done
APP_HOME=`dirname "$PRG"`

# For Cygwin, ensure paths are in UNIX format before anything is touched
if $cygwin ; then
    [ -n "$APP_HOME" ] &&
        APP_HOME=`cygpath --unix "$APP_HOME"`
    [ -n "$JAVA_HOME" ] &&
        JAVA_HOME=`cygpath --unix "$JAVA_HOME"`
fi

# We need to detect if we are running on WSL
IS_WSL=false
if [ -n "$WSL_DISTRO_NAME" ]; then
    IS_WSL=true
fi

# Setup the JVM
if [ -n "$JAVA_HOME" ] ; then
    if [ -x "$JAVA_HOME/jre/sh/java" ] ; then
        # IBM's JDK on AIX uses strange locations for the executables
        JAVACMD="$JAVA_HOME/jre/sh/java"
    else
        JAVACMD="$JAVA_HOME/bin/java"
    fi
    if [ ! -x "$JAVACMD" ] ; then
        die "ERROR: JAVA_HOME is set to an invalid directory: $JAVA_HOME

Please set the JAVA_HOME variable in your environment to match the
location of your Java installation."
    fi
else
    JAVACMD="java"
    which java >/dev/null 2>&1 || die "ERROR: JAVA_HOME is not set and no 'java' command could be found in your PATH.

Please set the JAVA_HOME variable in your environment to match the
location of your Java installation."
fi

# Don't pass PROPS to gradle wrapper, it's a shell-internal variable from an old version of this script.
case "$@" in
    *PROPS*)
        echo "Warning: Do not set PROPS to values containing spaces." 1>&2
        echo "Use GRADLE_OPTS and/or JAVA_OPTS to pass around options with spaces." 1>&2
esac

# Increase the maximum number of open files
if [ "$cygwin" = "false" -a "$darwin" = "false" ] ; then
    if [ "$MAX_FD" = "maximum" -o "$MAX_FD" = "max" ] ; then
        # Increase the maximum number of open files to the maximum allowable.
        MAX_FD_LIMIT=`ulimit -H -n`
        if [ $? -eq 0 ] ; then
            if [ "$MAX_FD_LIMIT" != 'unlimited' ] ; then
                ulimit -n $MAX_FD_LIMIT
            fi
        fi
    else
        if [ "$MAX_FD" != "unlimited" ] ; then
            # Increase the maximum number of open files
            ulimit -n $MAX_FD
        fi
    fi
fi

# Add -d32 to JAVA_OPTS if necessary on 32-bit architecture
case `uname -m` in
    i[3456]86)
        case `"$JAVACMD" -version 2>&1` in
            *64-Bit*)
                # Don't use -d32 on 64-bit Java
                ;;
            *)
                JAVA_OPTS="-d32 $JAVA_OPTS"
                ;;
        esac
        ;;
esac

# For Darwin, add options to specify how the application appears in the dock
if $darwin; then
    GRADLE_OPTS="$GRADLE_OPTS $DOCK_OPTS"
fi

# Collect all arguments for the java command, following the shell quoting and substitution rules
eval set -- "$DEFAULT_JVM_OPTS" "$JAVA_OPTS" "$GRADLE_OPTS" '-Dorg.gradle.appname=$APP_BASE_NAME' -classpath "$APP_HOME/gradle/wrapper/gradle-wrapper.jar" org.gradle.wrapper.GradleWrapperMain "$@"

# For WSL, we need to convert the windows-style classpath to a unix-style classpath
# It is needed, when the command is executed from a mounted windows drive
# It is not needed, when the command is executed from wsl file system
if [ "$IS_WSL" = "true" ] ; then
    # if the gradle command is executed from a mounted windows drive, we may need to fix the classpath
    # the mounted drives are typically located in /mnt
    if echo "$PWD" | grep -q "^/mnt"; then
        # we convert the classpath to windows format
        # we are in a subshell, so we can change the IFS
        (
            IFS=:
            classpath_elements=($5)
            classpath_elements[0]=`wslpath -w ${classpath_elements[0]}`
            printf -v windows_classpath "%s;" "${classpath_elements[@]}"
            set -- "$1" "$2" "$3" "$4" "$windows_classpath" "$6" "$7" "${@:8}"
            exec "$JAVACMD" "$@"
        )
        # after this, we are done, so we exit
        exit
    fi
fi

exec "$JAVACMD" "$@"
