# ##########################################################################
#
#  Gradle startup script for UN*X
#
# ##########################################################################

# Attempt to set APP_HOME
# Resolve links: $0 may be a link
PRG="$0"
# Need this for relative symlinks.
while [ -h "$PRG" ] ; do
    ls=`ls -ld "$PRG"`
    link=`expr "$ls" : '.*-> \(.*\)$'`
    if expr "$link" : '/.*' > /dev/null; then
        PRG="$link"
    else
        PRG=`dirname "$PRG"`"/$link"
    fi
done
SAVED="`pwd`"
cd "`dirname \"$PRG\"`/" >/dev/null
APP_HOME="`pwd -P`"
cd "$SAVED" >/dev/null

APP_NAME="Gradle"
APP_BASE_NAME=`basename "$0"`

# Add default JVM options here. You can also use JAVA_OPTS and GRADLE_OPTS to pass JVM options to this script.
DEFAULT_JVM_OPTS=""

# Use the maximum available, or set MAX_FD != -1 to use that value.
MAX_FD="maximum"

# For Darwin, add options to specify how the application appears in the dock
if [ "`uname`" = "Darwin" ]; then
    GRADLE_OPTS="$GRADLE_OPTS \"-Xdock:name=$APP_NAME\" \"-Xdock:icon=$APP_HOME/media/gradle.icns\""
fi

# For Cygwin, ensure paths are in UNIX format before anything is touched
if $cygwin ; then
    [ -n "$JAVA_HOME" ] && JAVA_HOME=`cygpath --unix "$JAVA_HOME"`
    [ -n "$CLASSPATH" ] && CLASSPATH=`cygpath --path --unix "$CLASSPATH"`
fi

# Attempt to set JAVA_HOME if it's not already set.
if [ -z "$JAVA_HOME" ] ; then
    # In some cases, /usr/bin/java is a soft-link to another command:
    if [ -x "/usr/bin/java" ] ; then
        java_binary="/usr/bin/java"
        # follow the link:
        java_binary="$(readlink -f "$java_binary")"
        # JAVACMD is the full path to the java binary:
        JAVACMD="$java_binary"
        # JAVA_HOME is the parent of the ../bin directory:
        JAVA_HOME="$(dirname "$(dirname "$java_binary")")"
    else
        # No /usr/bin/java, so we will let the "java" command be found in the path.
        # This may not work with all JVMs, but it's the best we can do.
        JAVACMD="java"
    fi
else
    JAVACMD="$JAVA_HOME/bin/java"
fi

if [ ! -x "$JAVACMD" ] ; then
    echo "Error: JAVA_HOME is not defined correctly."
    echo "  We cannot execute $JAVACMD"
    exit 1
fi

# Set lower priority
if [ -z "$GRADLE_NICENESS" -a -x "/usr/bin/nice" ] ; then
    GRADLE_NICENESS=0
fi
if [ -z "$GRADLE_IONICE_CLASS" -a -x "/usr/bin/ionice" ] ; then
    GRADLE_IONICE_CLASS="2"
fi
if [ -z "$GRADLE_IONICE_PRIORITY" -a -x "/usr/bin/ionice" ] ; then
    GRADLE_IONICE_PRIORITY="0"
fi

# Read properties
eval `sed -e 's/\\/\\\\/g' -e 's/=\(.*\)/=\"\1\"/' < "$APP_HOME/gradle/wrapper/gradle-wrapper.properties"`

# Set up the CLASSPATH
if [ -z "$CLASSPATH" ] ; then
    CLASSPATH="$APP_HOME/gradle/wrapper/$distributionUrl"
else
    CLASSPATH="$CLASSPATH:$APP_HOME/gradle/wrapper/$distributionUrl"
fi

# Split up the JVM options only if this is the Bash shell.
if [ -n "$BASH_VERSION" ] ; then
    JVM_OPTS=()
    for opt in $DEFAULT_JVM_OPTS $JAVA_OPTS $GRADLE_OPTS; do
        JVM_OPTS+=("$opt")
    done
else
    JVM_OPTS="$DEFAULT_JVM_OPTS $JAVA_OPTS $GRADLE_OPTS"
fi
JVM_OPTS+=("-Dorg.gradle.appname=$APP_BASE_NAME")

# Add the jar to the CLASSPATH
if [ -n "$CLASSPATH" ] ; then
    # Add the jar to the CLASSPATH
    CLASSPATH="$APP_HOME/gradle/wrapper/gradle-wrapper.jar:$CLASSPATH"
fi

# Add the main class to the CLASSPATH
if [ -n "$CLASSPATH" ] ; then
    CLASSPATH="$CLASSPATH:org.gradle.wrapper.GradleWrapperMain"
else
    CLASSPATH="org.gradle.wrapper.GradleWrapperMain"
fi

# Set the maximum number of file descriptors
if [ "$MAX_FD" != "-1" ] ; then
    if [ "$MAX_FD" = "maximum" -o "$MAX_FD" = "max" ] ; then
        # Increase the maximum file descriptors if we can.
        if [ "$cygwin" = "false" -a "$darwin" = "false" ] ; then
            if ulimit -H -n > /dev/null 2>&1 ; then
                ulimit -n `ulimit -H -n`
            fi
        fi
    else
        ulimit -n $MAX_FD
    fi
fi

# Execute the command
if [ -n "$GRADLE_NICENESS" -a -n "$GRADLE_IONICE_CLASS" -a -n "$GRADLE_IONICE_PRIORITY" ]; then
    exec /usr/bin/nice -n $GRADLE_NICENESS /usr/bin/ionice -c $GRADLE_IONICE_CLASS -n $GRADLE_IONICE_PRIORITY "$JAVACMD" "${JVM_OPTS[@]}" -classpath "$CLASSPATH" org.gradle.wrapper.GradleWrapperMain "$@"
elif [ -n "$GRADLE_NICENESS" ]; then
    exec /usr/bin/nice -n $GRADLE_NICENESS "$JAVACMD" "${JVM_OPTS[@]}" -classpath "$CLASSPATH" org.gradle.wrapper.GradleWrapperMain "$@"
else
    exec "$JAVACMD" "${JVM_OPTS[@]}" -classpath "$CLASSPATH" org.gradle.wrapper.GradleWrapperMain "$@"
fi
